---
import { Picture } from '@astrojs/image/components';

import PostTags from '~/components/blog/Tags.astro';
import { BLOG } from '~/config.mjs';
import type { Post } from '~/types';
import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export type Props = {
  post: Post;
};

const { post } = Astro.props;
const image = await findImage(post);
const transitionName = post.title.replace(/\s/g, '-').toLowerCase();
---

<article class="mb-6 transition">
  <div class="relative bg-gray-400 dark:bg-slate-700 rounded-md shadow-lg mb-6">
    {
      image && (
        <a href={getPermalink(post.permalink, 'post')} transition:name={transitionName} transition:animate="morph">
          <Picture
            src={image}
            class="md:object-cover w-full md:w-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            width={400}
            height={224}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="16:9"
            loading="lazy"
            decoding="async"
          />
        </a>
      )
    }
  </div>
  <h3 class="mb-2 text-xl font-bold leading-tight sm:text-2xl font-heading">
    {
      BLOG?.post?.disabled ? (
        post.title
      ) : (
        <a
          href={getPermalink(post.permalink, 'post')}
          class="hover:text-primary dark:hover:text-blue-700  transition ease-in duration-200"
        >
          {post.title}
        </a>
      )
    }
  </h3>
  <PostTags tags={post.tags} />
  <p class="text-muted dark:text-slate-400 text-lg">{post.excerpt || post.description}</p>
</article>
