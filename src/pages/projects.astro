---
import ProjectsGrid from '~/components/widgets/Projects.astro';
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import { myProjects } from '~/data';

const meta = {
  title: SITE.title + ' | My Open Source projects',
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <ProjectsGrid
    title="My Projects"
    subtitle="Some of my favourite Open Source projects I own/maintain"
    highlight="Open Source"
    repositories={myProjects}
  />
</Layout>
