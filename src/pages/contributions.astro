---
import Projects from '~/components/widgets/Projects.astro';
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import { openSourceProjects } from '~/data';

const meta = {
  title: SITE.title + ' | Open Source contributions',
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Projects
    title="Contributions"
    subtitle="Some projects I contributed to which I'm really proud of!"
    highlight="Open Source"
    repositories={openSourceProjects}
  />
</Layout>
